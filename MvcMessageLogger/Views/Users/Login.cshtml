@{
    bool? failedLogin = ViewData["FailedLogin"] as bool?;
}

<link rel="stylesheet" href="~/css/VaporTheme.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

@{
    Layout = null;
}

    <div class="col-md-6 offset-lg-3 align-middle" style="margin-top: 25px">
        <h1 class=" justify-content-center">Chirp Login</h1>
        <form method="post" action="/users/login">
            <div class="form-group  ">
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" fdprocessedid="kydy1k" name="Email">
                @*<small id="emailHelp" class="form-text text-muted">We will share your email.</small>*@
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off" fdprocessedid="yrgqom" name="Password">
            </div>

            <br />
            @if (failedLogin == true)
            {
                <p class="text-danger">Email or password not found</p>
            }
        <div class="d-grid gap-2">
            <button class="btn btn-lg btn-primary" type="submit" fdprocessedid="01ckw">Login</button>
        </div>
        </form>
        <div>
            <form action="/users/newaccount">
                <p class="text-center ">Don't have an account?</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-primary" type="submit" fdprocessedid="01ckw">Create Account</button>
                </div>
            </form>
        </div>
    </div>
    

